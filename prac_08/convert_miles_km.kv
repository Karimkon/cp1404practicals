<MilesToKmConverterApp>:
    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: '50dp'

            TextInput:
                id: input_miles
                hint_text: 'Enter miles'
                on_text: app.convert_miles_to_km(self.text)  # Automatically convert on text change

            Button:
                text: 'Up'
                on_press: app.increment_miles(1)

            Button:
                text: 'Down'
                on_press: app.increment_miles(-1)

        Label:
            text: root.output_km + " km"
            color: (1, 1, 0, 1)  # Yellow text color

        Label:
            text: 'Enter a number and press "Convert"'
            size_hint_y: None
            height: self.minimum_height
