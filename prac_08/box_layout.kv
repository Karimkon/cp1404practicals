<BoxLayoutDemoApp>:
    orientation: 'vertical'
    
    Button:
        text: 'Clear'
        on_press: app.handle_clear()  # Clear button action

    Button:
        text: 'two'  # This will be replaced by a TextInput
        on_press: app.handle_greet()  # Greet button action

    TextInput:
        id: input_name
        text: ''

    Button:
        text: 'Greet'
        on_press: app.handle_greet()  # Greet button action

    Label:
        id: output_label
        text: 'Enter your name'
        color: (1, 1, 0, 1)  # Yellow text
